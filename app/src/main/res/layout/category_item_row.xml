<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="first_transition"
    android:id="@+id/cardviewList"
    android:orientation="horizontal"
    card_view:cardCornerRadius="@dimen/t_3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/t_15dp"
        android:paddingRight="@dimen/t_15dp"
        android:paddingTop="@dimen/t_10dp"
        android:paddingBottom="@dimen/t_10dp">

        <TextView
            android:id="@+id/categoryTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="@dimen/t_28sp"
            android:textAlignment="center"
            android:textColor="@color/secondary_text"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="@dimen/t_30dp"
            android:layout_height="@dimen/t_30dp"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/t_15dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>